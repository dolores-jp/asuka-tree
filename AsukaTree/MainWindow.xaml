<Window x:Class="AsukaTree.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AsukaTree"
        Title="AsukaTree"
        Width="520" Height="780"
        MinWidth="420" MinHeight="640"
        FontSize="18"
        TextOptions.TextFormattingMode="Display">


    <Window.Resources>
        <local:TypeToIconConverter x:Key="TypeToIconConverter" />

        <!-- 全展開（壺の中身も開く） -->
        <Style TargetType="TreeViewItem">
            <Setter Property="IsExpanded" Value="True"/>
        </Style>

        <HierarchicalDataTemplate DataType="{x:Type local:JsonTreeNode}"
                                  ItemsSource="{Binding Children}">
            <StackPanel Orientation="Horizontal">
                <Image Width="16" Height="16"
                       Source="{Binding IconKey, Converter={StaticResource TypeToIconConverter}}"
                       Margin="0,0,6,0"/>
                <TextBlock Text="{Binding Text}" />
            </StackPanel>
        </HierarchicalDataTemplate>
    </Window.Resources>

    <DockPanel Margin="8">
        <!-- 上部コントロール -->
        <Grid DockPanel.Dock="Top" Margin="0,0,0,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 1行目：ポート＋開始停止 -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="140"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Port:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <TextBox x:Name="PortBox" Grid.Column="1" VerticalAlignment="Center" />

                <TextBlock Grid.Column="2"/>

                <Button x:Name="ToggleButton" Grid.Column="3" Content="開始" Click="OnToggleClick" />
            </Grid>

            <!-- 2行目：背景画像＋透過度 -->
            <WrapPanel Grid.Row="1" Margin="0,8,0,0" VerticalAlignment="Center">
                <TextBlock Text="背景:" VerticalAlignment="Center" Margin="0,0,6,0"/>

                <Button Content="画像を選択" Click="OnChooseBackgroundClick" Margin="0,0,6,0"/>
                <Button Content="クリア" Click="OnClearBackgroundClick" Margin="0,0,12,0"/>

                <TextBlock Text="透過度" VerticalAlignment="Center" Margin="0,0,6,0"/>

                <Slider Width="160"
            Minimum="0" Maximum="1"
            Value="{Binding BackgroundOpacity, Mode=TwoWay}"
            SmallChange="0.05" LargeChange="0.1"
            VerticalAlignment="Center"
            Margin="0,0,8,0"/>

               <TextBlock VerticalAlignment="Center"
               Text="{Binding BackgroundOpacity, StringFormat={}{0:0.00}}"
               Opacity="0.7"/>
            </WrapPanel>
        </Grid>

        <!-- ステータス -->
        <TextBlock x:Name="StatusText" DockPanel.Dock="Top" Margin="0,0,0,8"
                   TextTrimming="CharacterEllipsis"/>

        <!-- アイテム表示欄（背景ブラシをバインド） -->
        <Border BorderThickness="1" BorderBrush="#33000000" CornerRadius="6" Padding="3"
        Background="{Binding TreeBackgroundBrush}">
            <ItemsControl ItemsSource="{Binding Roots}">
                <!-- Rootsだけ2列 -->
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <local:TwoColumnWrapPanel Columns="2" ColumnGap="16"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <!-- 1アイテム（壺なら中身もここで表示） -->
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="{x:Type local:JsonTreeNode}">
                        <StackPanel Margin="0,0,10,2">
                            <StackPanel Orientation="Horizontal" Margin="0,0">
                                <Image Width="16" Height="16"
                                 Source="{Binding IconKey, Converter={StaticResource TypeToIconConverter}}"
                                 Margin="0,0,6,0"/>
                                 <local:OutlinedText Text="{Binding Text}"
                                                     FontSize="15"
                                                     Stroke="White"
                                                     StrokeThickness="2"
                                                     Foreground="Black"/>
                            </StackPanel>

                            <!-- 子（壺の中身）: 常に縦並び -->
                            <ItemsControl ItemsSource="{Binding Children}" Margin="18,0,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate DataType="{x:Type local:JsonTreeNode}">
                                        <StackPanel Orientation="Horizontal" Margin="0,0">
                                            <Image Width="16" Height="16"
                                           Source="{Binding IconKey, Converter={StaticResource TypeToIconConverter}}"
                                           Margin="0,0,6,0"/>
                                            <local:OutlinedText Text="{Binding Text}"
                                                FontSize="15"
                                                Stroke="White"
                                                StrokeThickness="2"
                                                Foreground="Black"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
    </DockPanel>
</Window>
